{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "typeRoots": ["./app/@types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "*": ["app/@types", "node_modules/@types"] }
  },
  "include": ["./app/**/*"]
}
